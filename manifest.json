{
  "manifest_version": 3,
  "name": "Parameter Search",
  "version": "0.1",
  "description": "Open a tab showing browser history with parsed URL parameters.",
  "icons": { "48": "icons/icon48.svg", "128": "icons/icon128.svg" },
  "permissions": ["history", "tabs"],
  "action": {
    "default_title": "Open Parameter Search",
    "default_icon": { "48": "icons/icon48.svg" }
  },
  "background": { "service_worker": "background.js" },
  "commands": {
    "open-history": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Open Parameter Search"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["history.html", "history.js", "history.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
